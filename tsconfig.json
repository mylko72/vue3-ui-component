// tsconfig.json
{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "preserve",
      "esModuleInterop": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "types": ["vite/client"],
      "skipLibCheck": true
    },
    "include": ["src/**/*", "src/**/*.d.ts"]
  }
  